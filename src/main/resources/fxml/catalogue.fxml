<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" xmlns="http://javafx.com/javafx"
 xmlns:fx="http://javafx.com/fxml"
  fx:controller="controller.CatalogueController">
    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <Label text="Catalogue des Médicaments" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #f4f4f4; -fx-background-radius: 5;">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>
        <Label text="Recherche :"/>
        <TextField fx:id="txtRecherche" promptText="Nom du médicament..." prefWidth="300"/>
        <Button text="Rechercher" onAction="#handleRechercher" style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
        <Button text="Afficher tous" onAction="#handleAfficherTous" style="-fx-background-color: #607D8B; -fx-text-fill: white;"/>
    </HBox>

    <TableView fx:id="tableMedicaments" VBox.vgrow="ALWAYS" style="-fx-background-color: white;">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colNom" text="Nom" prefWidth="180"/>
            <TableColumn fx:id="colPrix" text="Prix (DH)" prefWidth="90"/>
            <TableColumn fx:id="colStock" text="Stock" prefWidth="80"/>
            <TableColumn fx:id="colExpiration" text="Expiration" prefWidth="110"/>
            <TableColumn fx:id="colPrescription" text="Prescription" prefWidth="100"/>
            <TableColumn fx:id="colFournisseur" text="Fournisseur" prefWidth="140"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-border-color: #ddd; -fx-border-width: 1 0 0 0;">
        <padding>
            <Insets top="15"/>
        </padding>
        <Label text="Quantité :" style="-fx-font-weight: bold;"/>
        <Spinner fx:id="spinnerQuantite" prefWidth="90" editable="true"/>
        <Button text="Ajouter au Panier" onAction="#handleAjouterPanier" 
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15;"/>
        <Label fx:id="lblInfoPanier" style="-fx-text-fill: #4CAF50; -fx-font-weight: bold;"/>
    </HBox>
</VBox>