<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.LoginController"
      alignment="CENTER"
      spacing="20"
      style="-fx-background-color: #f5f5f5;">
    
    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>
    
  
    <Label text="Connexion "
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill:#4CAF50;"/>
    

    <GridPane hgap="10" vgap="15" alignment="CENTER"
              style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;">

        <Label text="Email :" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="txtEmail" 
                   promptText="saisir votre adressse mail"
                   prefWidth="250"
                   GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        
        <Label text="Mot de passe :" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <PasswordField fx:id="txtPassword"
                       promptText="••••••••"
                       prefWidth="250"
                       GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        

        <Label text="Rôle :" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <ComboBox fx:id="comboRole"
                  prefWidth="250"
                  GridPane.rowIndex="2" GridPane.columnIndex="1">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="CLIENT"/>
                    <String fx:value="PHARMACIEN"/>
                </FXCollections>
            </items>
        </ComboBox>
        
       
        <Button text="Se connecter"
                onAction="#handleLogin"
                prefWidth="220"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px;"
                GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
        
    </GridPane>
    
</VBox>