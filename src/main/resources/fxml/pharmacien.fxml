<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" xmlns="http://javafx.com/javafx"
 xmlns:fx="http://javafx.com/fxml"
  fx:controller="controller.PharmacienController">
    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <Label text="Gestion des Pharmaciens" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Recherche :"/>
        <TextField fx:id="txtRecherche" promptText="Rechercher par email..." prefWidth="300"/>
        <Button text="Rechercher" onAction="#handleRechercher" style="-fx-background-color: #ecf0f1;"/>
        <Button text="Afficher tous" onAction="#handleAfficherTous" style="-fx-background-color: #ecf0f1;"/>
    </HBox>

    <TableView fx:id="tablePharmaciens" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colPrenom" text="PrÃ©nom" prefWidth="150"/>
            <TableColumn fx:id="colNom" text="Nom" prefWidth="150"/>
            <TableColumn fx:id="colEmail" text="Email" prefWidth="250"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <HBox spacing="10">
        <Button text="Ajouter" onAction="#handleAjouter" 
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px;" prefWidth="100"/>
        <Button text="Modifier" onAction="#handleModifier" 
                style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px;" prefWidth="100"/>
        <Button text="Supprimer" onAction="#handleSupprimer" 
                style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 14px;" prefWidth="100"/>
    </HBox>
</VBox>