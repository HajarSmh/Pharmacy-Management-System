<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" xmlns="http://javafx.com/javafx" 
xmlns:fx="http://javafx.com/fxml"
 fx:controller="controller.ClientController">
    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <Label text="Gestion des Clients" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Recherche :"/>
        <TextField fx:id="txtRecherche" promptText="Rechercher par email..." prefWidth="300"/>
        <Button text="Rechercher" onAction="#handleRechercher"/>
        <Button text="Afficher tous" onAction="#handleAfficherTous"/>
    </HBox>

    <TableView fx:id="tableClients" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colPrenom" text="Prénom" prefWidth="120"/>
            <TableColumn fx:id="colNom" text="Nom" prefWidth="120"/>
            <TableColumn fx:id="colEmail" text="Email" prefWidth="200"/>
            <TableColumn fx:id="colTelephone" text="Téléphone" prefWidth="120"/>
            <TableColumn fx:id="colAdresse" text="Adresse" prefWidth="250"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <HBox spacing="10">
        <Button text="Ajouter" onAction="#handleAjouter" 
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px;" prefWidth="100"/>
        <Button text="Modifier" onAction="#handleModifier" 
                style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px;" prefWidth="100"/>
        <Button text="Supprimer" onAction="#handleSupprimer" 
                style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 14px;" prefWidth="100"/>
    </HBox>
</VBox>