<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx" 
xmlns:fx="http://javafx.com/fxml"
 fx:controller="controller.PanierController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <children>
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Mon Panier" />
        
        <TableView fx:id="tablePanier" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colNom" prefWidth="250.0" text="Médicament" />
                <TableColumn fx:id="colQuantite" prefWidth="100.0" text="Quantité" />
                <TableColumn fx:id="colPrixUnit" prefWidth="150.0" text="Prix Unitaire (DH)" />
                <TableColumn fx:id="colSousTotal" prefWidth="150.0" text="Sous-Total (DH)" />
            </columns>
        </TableView>
        
        <HBox spacing="10.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <Button onAction="#handleModifierQuantite" prefWidth="150.0" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px;" text="Modifier Quantité" />
                <Button onAction="#handleRetirer" prefWidth="100.0" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 14px;" text="Retirer" />
                <Button onAction="#handleViderPanier" prefWidth="150.0" style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-size: 14px;" text="Vider le Panier" />
            </children>
        </HBox>
        
        <VBox spacing="10.0" style="-fx-background-color: #f0f0f0; -fx-border-color: #ccc; -fx-border-width: 1px;">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <Label fx:id="lblTotal" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #4CAF50;" text="Total : 0.00 DH" />
                <Button onAction="#handleValiderCommande" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 16px;" text="Valider la Commande" />
            </children>
        </VBox>
    </children>
</VBox>